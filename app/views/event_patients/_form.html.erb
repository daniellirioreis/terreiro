<%= simple_form_for(@event_patient) do |f| %>

<%= f.hidden_field :event_id %>
<%= f.hidden_field :patient_id %>
<%= hidden_field_tag :back_to, @back_to %>
<%= hidden_field_tag :from_where, @from_where %>


<div class="form-actions">  
	<h3>Dados do Evento/Agendamento</h3>
	<p>
	  <strong>Nome:</strong>
	  <%= @event.name %>
	</p>
	<p>
	  <strong>Data inicio:</strong>
	  <%=  l @event.date_start %>
	
	</p>
	<p>
	  <strong>Data final:</strong>
	  <%=  l @event.date_end %>
	</p>
	<p>
		<strong>Valor:</strong>
		<%= number_to_currency @event.price %>
	</p>
</div>


<div class="form-actions">  
	<h3>Dados do Consulente</h3>
	<p>
	  <strong>Nome:</strong>
	  <%= @patient.name %>
	</p>
	<p>
	  <strong>Data de Nasc:</strong>
	  <%= l @patient.birth_date if @patient.birth_date.present? %>
	</p>
	<p>
	  <strong>telefone:</strong>
	  <%= @patient.phone %>
	</p>
	<p>
		<strong>Endere√ßo:</strong>
		<%= @patient.address %>
	</p>
</div>


	<div class="row-fluid">
		<div class="span2"><%= f.input :status_event_patient, collection: StatusEventPatient , input_html: {class: 'span12'} %> </div>
	</div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-success" %>
	<% if @back_to == 'event'%>
	    <%= link_to 'Voltar', @event, :class => "btn"  %>		
	<% else %>
		<% if @from_where == 'scheduling' %>
			<%= link_to 'Voltar', patient_path(id: @patient.id, from_where: "scheduling" ), :class => "btn"  %>
		<% else %>
			<%= link_to 'Voltar', @patient, :class => "btn"  %>
		<% end %>    	
	<% end %>
  </div>
<% end %>
