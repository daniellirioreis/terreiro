<%= simple_form_for(@product) do |f| %>
	<div class="row-fluid">
	  <div class="span6"><%= f.input :name, input_html: { class: 'span12' } %></div>
	</div>
	<div class="row-fluid">
		<div class="span6"><%= f.input :description, input_html: { class: 'span12', cols:'50', rows: '10' } %></div>	  
	</div>
	<div class="row-fluid">
		<div class="span3"><%= f.input :minimum_stock, as: :string, input_html: { class: 'span2' } %></div>	  
	</div>
  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-success" %>
    <%= link_to 'Voltar', products_path, :class => "btn"  %>
  </div>
<% end %>
