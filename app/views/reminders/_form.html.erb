<%= simple_form_for(@reminder) do |f| %>
	<div class="row-fluid">
	  <div class="span6"><%= f.input :title, input_html: { class: 'span12' } %></div>
	 <div class="span2"><%= f.input :color_title, collection: Color , input_html: {class: 'span12'} %></div>	
	</div>

	<div class="row-fluid">
	  <div class="span6"><%= f.input :subtitle, input_html: { class: 'span12' } %></div>
 	  <div class="span2"><%= f.input :color_subtitle, collection: Color , input_html: {class: 'span12'} %></div>	
	</div>	

	<div class="row-fluid">
	  <div class="span6"><%= f.input :image, input_html: { class: 'span12' } %></div>
	</div>
	<div class="row-fluid">
	  <div class="span6"><%= f.input :video, input_html: { class: 'span12' } %></div>
	</div>
	<div class="row-fluid">
		<div class="span6"><%= f.input :description, input_html: { class: 'span12', cols:'50', rows: '10' } %></div>	  
	</div>
  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-success" %>
    <%= link_to 'Voltar', reminders_path, :class => "btn"  %>
  </div>
	
	  <small>
			<p>
				<strong>* no campo descrição pode ser adicionado tag html para formatar a informação.</strong>
			</p>
		</small>
<% end %>
