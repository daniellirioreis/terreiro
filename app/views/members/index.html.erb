<table class="table">
  <td>
    <h3>Listagem de Membros</h3>
  </td>
  <td width='5%'>
    <%= link_to new_member_path, role: 'button' do %>
      <h2 class="text-success" title='Novo Aluno'>+</h2>
    <% end %>    
  </td>
</table>

<%= label_tag 'txtBusca', 'Pesquisar' %>
<%= text_field_tag 'txtBusca', '', :class => 'span11 input-search', :id => 'txtBusca',:placeholder => "Buscar nesta lista", :alt =>"list_members" %>


<table class="table list_members">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Idade</th>
      <th>Endereço</th>
      <th>Telefones</th>
      <th colspan="3" width="5%"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |m| %>
      <tr>
        <td><%= m %></td>
        <td><%= m.age_string %></td>
        <td><%= m.address%></td>
        <td><%= m.phones %></td>
        <td>
          <%= link_to edit_member_path(m), role: 'button' do %>
            <strong>Editar</strong>
          <% end %>
        </td>
        <td>
          <%= link_to m, method: :delete, data:{confirm: 'Confirma exclusão ?'}, role: 'button' do %>
            <strong>Apagar</strong>
          <% end %>              
        </td>
        <td>
          <%= link_to m, role: 'button' do %>
            <strong>Info</strong>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
