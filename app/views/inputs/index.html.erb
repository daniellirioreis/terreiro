<table class="table">
  <td>
    <h3>Listagem Entradas</h3>
  </td>
  <td width='5%'>
    <%= link_to new_input_path, role: 'button' do %>
      <h2 class="text-success" title='Nova Entrada'>+</h2>
    <% end %>    
  </td>
</table>
<%= label_tag 'txtBusca', 'Pesquisar' %>
<%= text_field_tag 'txtBusca', '', :class => 'span11 input-search', :id => 'txtBusca',:placeholder => "Buscar nesta lista", :alt =>"list_inputs" %>

<table class="table list_inputs">
  <thead>
    <tr>
      <th>Data</th>
      <th>Descrição</th>
      <th>Membro</th>
      <th>Valor</th>
      <th colspan="4" width="5%"></th>
    </tr>
  </thead>

  <tbody>
    <% @inputs.each do |m| %>
      <tr>
        <td><%= l m.date_input unless m.date_input.nil? %></td>
        <td><%= m.description %></td>
        <td> <%= m.member%></td> 
        <td><%= number_to_currency m.value %></td>
				<td>
					<% unless m.closed %>					
						<%= link_to edit_input_path(m), role: 'button' do %>
            	<strong>Editar</strong>
          	<% end %>
          <% end %>
				</td>
        <td>
					<% unless m.closed %>										
          	<%= link_to m, method: :delete, data:{confirm: 'Confirma exclusão ?'}, role: 'button' do %>
            	<strong>Apagar</strong>
          		<% end %>              
					<% end %>
        </td>
				<td>
					<% unless m.closed %>															
						<%= link_to print_input_path(m), role: 'button' do %>
          		<strong>Lista de compra</strong>
        		<% end %>					
					<% end %>
				</td>
        <td>
          <%= link_to m, role: 'button' do %>
            <strong>Info</strong>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
