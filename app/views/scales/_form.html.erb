<%= simple_form_for(@scale) do |f| %>
	<div class="row-fluid">
		<div class="span4">
    	<%= f.input :date, as: :string, input_html: {data: {provide:'datepicker' }, class:'span4 date'} %>
		</div>
		<div class="span4">
    	<%= f.input :hours, as: :string, input_html: {class:'span4 time'} %>
		</div>
		<div class="span2"><%= f.input :type_scale, collection: TypeScale , input_html: {class: 'span12'} %></div>	 
	</div>
	<div class="row-fluid">
		<div class="span6"><%= f.input :description, input_html: { class: 'span12', cols:'50', rows: '10' } %></div>	  
	</div>
	
	<h5>Membros</h5>
	
	<hr>
	<div id="member_scales">
	  <%= f.simple_fields_for :member_scales do |member_scale| %>
	    <%= render "member_scale_fields", :f => member_scale %>
	  <% end %>
	</div>
	<div>
	  <%= link_to_add_association 'Adicionar membro', f, :member_scales, :class => "btn btn-default" %>
	</div>
	<br>
	
	
	
  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-success" %>
    <%= link_to 'Voltar', scales_path, :class => "btn"  %>
  </div>
<% end %>
