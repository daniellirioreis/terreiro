<%= simple_form_for(@event) do |f| %>
	<div class="row-fluid">
	  <div class="span6"><%= f.input :name, input_html: { class: 'span12' } %></div>
	</div>
	<div class="row-fluid"> 
	   <div class="span4">
	     <%= f.input :date_start, as: :string, input_html: {data: {provide:'datepicker' }, class:'span4 date'} %>
		 </div>
		 <div class="span4">
	     <%= f.input :date_end, as: :string, input_html: {data: {provide:'datepicker' }, class:'span4 date'} %>
		 </div>	  
	</div>
	<div class="row-fluid">
	  <div class="span6"><%= f.input :price, as: :string, input_html: { class: 'span5 float' } %></div>
	</div>
	<div class="row-fluid">
		<div class="span2"><%= f.input :status_event, collection: StatusEvent , input_html: {class: 'span12'} %> </div>
	 
	</div>
	<div class="form-actions">
    <%= f.button :submit, :class => "btn btn-success" %>
    <%= link_to 'Voltar', events_path, :class => "btn"  %>
  </div>
<%end%>