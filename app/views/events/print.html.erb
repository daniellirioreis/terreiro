<div class="form-actions">  
	<p>
	  <strong>Nome:</strong>
	  <%= @event.name %>
	</p>
	<p>
	  <strong>Data inicio:</strong>
	  <%= l @event.date_start %>
	</p>
	<p>
	  <strong>Data final:</strong>
	  <%= l @event.date_end %>
	</p>
	<p>
		<strong>Valor:</strong>
		<%= number_to_currency @event.price %>
	</p>
	<h4>Participantes</h4>
	<table class="table list_events">
	  <thead>
	    <tr>
	      <th>Nome</th>
	      <th>Telefones</th>	
	      <th>Situação</th>
	      <th colspan="3" width="5%"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @event.event_patients.each do |m| %>
	      <tr>
	        <td><%= m %></td>
	        <td><%= m.patient.phones %></td>
	        <td><%= m.status_event_patient_humanize %></td>	
	        <td>
	        </td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	