<table class="table">
  <td>
    <h3>Listagem de Eventos</h3>
  </td>
  <td width='5%'>
    <%= link_to new_event_path, role: 'button' do %>
      <h2 class="text-success" title='Novo Paciente'>+</h2>
    <% end %>    
  </td>
</table>

<%= label_tag 'txtBusca', 'Pesquisar' %>
<%= text_field_tag 'txtBusca', '', :class => 'span11 input-search', :id => 'txtBusca',:placeholder => "Buscar nesta lista", :alt =>"list_events" %>


<table class="table list_events">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3" width="5%"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |m| %>
      <tr>
        <td><%= m %></td>
        <td>
          <%= link_to edit_event_path(m), role: 'button' do %>
            <strong>Editar</strong>
          <% end %>
        </td>
        <td>
          <%= link_to m, method: :delete, data:{confirm: 'Confirma exclusÃ£o ?'}, role: 'button' do %>
            <strong>Apagar</strong>
          <% end %>              
        </td>
        <td>
          <%= link_to m, role: 'button' do %>
            <strong>Info</strong>
          <% end %>
        </td>
        <td>
          <%= link_to print_event_path(m), role: 'button' do %>
            <strong>Imprimir</strong>
          <% end %>
        </td>		
      </tr>
    <% end %>
  </tbody>
</table>
